{
  "compilerOptions": {
    "incremental": true,
    "composite": true,
    "declarationMap": false,
    "sourceMap": false,
    "jsx": "react",
    "outDir": "${configDir}/dist/tsc",
    "module": "ES2022",
    "moduleResolution": "Bundler",
    "target": "ES2018",
    "lib": [
      "es2015",
      "dom",
      "dom.iterable",
      "es2017.object",
      "es2018.promise",
      "es2016.array.include",
      "es2019.array",
      "es2020"
    ],
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
  }
}
